{{ form_start(form) }}
<div class="row mb-3">
    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">{{ form_label(form.file) }}</label>
    <div class="col-sm-10">
        <div class="input-group input-group-merge">
            {{ form_widget(form.file) }}
        </div>
    </div>
    <div class="form-text text-center">{{ form_errors(form.file) }}</div>
</div>
<div class="row mb-3">
    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">{{ form_label(form.name) }}<span
                class="text-danger">*</span></label>
    <div class="col-sm-10">
        <div class="input-group input-group-merge">
            <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>
            {{ form_widget(form.name) }}
        </div>
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-2 col-form-label" for="basic-icon-default-email">{{ form_label(form.email) }} <span class="text-danger">*</span></label>
    <div class="col-sm-10">
        <div class="input-group input-group-merge">
            <span class="input-group-text"><i class="bx bx-envelope"></i></span>
            {{ form_widget(form.email) }}
        </div>
        <div class="form-text">You can use letters, numbers & periods</div>
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-2 col-form-label" for="basic-icon-default-password">{{ form_label(form.new_password) }}</label>
    <div class="col-sm-10">
        <div class="input-group input-group-merge">
            <span id="basic-icon-default-password2" class="input-group-text"><i class="bx bx-lock"></i></span>
            {{ form_widget(form.new_password) }}
        </div>
        <small>{{ form_errors(form) }}</small>
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-2 col-form-label" for="basic-icon-default-confirm-password">{{ form_label(form.confirm_password) }}</label>
    <div class="col-sm-10">
        <div class="input-group input-group-merge">
            <span id="basic-icon-default-confirm-password2" class="input-group-text"><i class="bx bx-lock"></i></span>
            {{ form_widget(form.confirm_password) }}
        </div>
    </div>
</div>
<div class="row mb-3">
    <label class="col-sm-2 form-label" for="basic-icon-default-message">{{ form_label(form.about) }}</label>
    <div class="col-sm-10">
        <div class="input-group input-group-merge">
                              <span id="basic-icon-default-message2" class="input-group-text"
                              ><i class="bx bx-comment"></i></span>
            {{ form_widget(form.about) }}
        </div>
    </div>
</div>
<div class="row justify-content-end">
    <div class="col-sm-10">
        <button type="submit" class="btn {{ btn_color }}">{{ btn_name }}</button>
    </div>
</div>
{{ form_end(form) }}