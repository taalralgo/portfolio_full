{% extends 'backend.html.twig' %}

{% block breadcrump %}
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">projects /</span> liste
    </h4>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
{% endblock %}

{% block javascripts %}
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" defer></script>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header index-card-header">
            <h5>Mes projets</h5>
            <a class="btn btn-primary" href="{{ path('admin_project_create') }}">Ajouter un projet</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table datatable-list">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Stack technos</th>
                        <th >Date de debut</th>
                        <th >Date de fin</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                    {% for project in projects %}
                        <tr>
                            <td><img src="{{ asset('uploads') }}/{{ project.image }}" alt="project-logo" class="table-logo"></td>
                            <td>{{ project.name }}</td>
                            <td>{{ project.technos | join(', ') }}</td>
                            <td>{{ project.startAt | date('d-m-Y')  }}</td>
                            <td>{{ project.finishAt | date('d-m-Y')  }}</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                            data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="{{ path('admin_project_edit', {'id': project.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i>
                                            Modifier
                                        </a>
                                        <a class="dropdown-item" href="{{ path('admin_project_delete', {'id': project.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i>
                                            Supprimer
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}