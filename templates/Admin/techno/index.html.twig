{% extends 'backend.html.twig' %}

{% block breadcrump %}
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Technos /</span> liste
    </h4>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header index-card-header">
            <h5>Technologies</h5>
            <a class="btn btn-primary" href="{{ path('admin_techno_create') }}">Ajouter une techno</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th >Description</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                    {% for techno in technos %}
                        <tr>
                            <td><img src="{{ asset('uploads') }}/{{ techno.image }}" alt="techno-logo" class="table-logo"></td>
                            <td>{{ techno.name }}</td>
                            <td>{{ techno.description  }}</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                            data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="{{ path('admin_techno_edit', {'id': techno.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i>
                                            Modifier
                                        </a>
                                        <a class="dropdown-item" href="{{ path('admin_techno_delete', {'id': techno.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i>
                                            Supprimer
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}