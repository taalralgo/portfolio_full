{% extends 'backend.html.twig' %}

{% block breadcrump %}
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Experiences /</span> liste
    </h4>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
{% endblock %}

{% block javascripts %}
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js" defer></script>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header index-card-header">
            <h5>Experiences professionnelles</h5>
            <a class="btn btn-primary" href="{{ path('admin_experience_create') }}">Ajouter une experience</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table datatable-list">
                    <thead>
                    <tr>
                        <th>Entreprise</th>
                        <th>Titre</th>
                        <th >Type</th>
                        <th >Dur√©e</th>
                        <th >Pays</th>
                        <th >Ville</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                    {% for experience in experiences %}
                        <tr>
                            <td>{{ experience.nameCompany }}</td>
                            <td>{{ experience.nameJob  }}</td>
                            <td>{{ experience.typeContrat  }}</td>
                            <td>{{ experience.dureeContrat  }}</td>
                            <td>{{ experience.pays  }}</td>
                            <td>{{ experience.ville  }}</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                            data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="{{ path('admin_experience_edit', {'id': experience.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i>
                                            Modifier
                                        </a>
                                        <a class="dropdown-item" href="{{ path('admin_experience_delete', {'id': experience.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i>
                                            Supprimer
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}