{% extends 'backend.html.twig' %}
{% block breadcrump %}
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Technologies /</span> Modifier
    </h4>
{% endblock %}
{% block body %}
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Modifier la techno</h5>
            <small class="text-muted float-end">Les cahmps marqu√©s avec <span class="text-danger">*</span> sont obligatoires</small>
        </div>
        <div class="card-body">
            {% for flash in app.flashes('save_error') %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    {{ flash }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {{ include('Admin/techno/_form.html.twig', {'btn_name': 'Modifier', 'btn_color': 'btn-warning'}) }}
        </div>
    </div>
{% endblock %}